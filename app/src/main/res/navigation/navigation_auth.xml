<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_auth"
    app:startDestination="@id/signupfragment">

    <fragment
        android:id="@+id/signupfragment"
        android:name="com.example.conduit.Auth.Loginfragment"
        android:label="fragment_signupfragment"/>
    <fragment
        android:id="@+id/loginfragment"
        android:name="com.example.conduit.Auth.Signupfragment"
        android:label="fragment_loginfragment"/>
        <action
            android:id="@+id/gotologinfragment"
            app:destination="@id/loginfragment"
            app:popEnterAnim="@animator/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    <action
        android:id="@+id/gotosignupfragment"
        app:destination="@id/signupfragment"
        app:popEnterAnim="@animator/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim" />

</navigation>